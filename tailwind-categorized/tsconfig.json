{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
